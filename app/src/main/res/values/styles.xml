<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <item name="android:datePickerStyle">@style/AppThemeDatePickerStyle</item>
    </style>

    <style name="AppThemeDatePickerStyle" parent="@android:style/Widget.DatePicker">
        <item name="android:spinnersShown">false</item>
        <item name="android:calendarViewShown">true</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>


    <style name="WhiteDrawerIconStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PatternText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">9dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

</resources>
