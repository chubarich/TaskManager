<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <item name="android:datePickerStyle">@style/AppThemeDatePickerStyle</item>
    </style>

    <style name="AppThemeDatePickerStyle" parent="@android:style/Widget.DatePicker">
        <item name="android:spinnersShown">false</item>
        <item name="android:calendarViewShown">true</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>


    <style name="WhiteDrawerIconStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PatternText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">9dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="AuthInput" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/indigo_100</item>
        <item name="android:paddingRight">15dp</item>
        <item name="colorControlNormal">@color/indigo_100</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AuthInputInversed" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:paddingRight">15dp</item>
        <item name="colorControlNormal">@color/hint_text</item>
        <item name="colorControlActivated">@color/secondary_text</item>
        <item name="colorControlHighlight">@color/secondary_text</item>
    </style>

    <style name="AuthButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/grey</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AuthInputLayout" parent="AppTheme">
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
        <item name="errorTextAppearance">@style/AppTheme.TextErrorAppearance</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow
        </item>
        <item name="android:textColorHint">@color/indigo_100</item>
        <item name="android:textColorHighlight">@color/indigo_100</item>
        <item name="android:textColorHighlightInverse">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>


    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance.Inversed" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/hint_text</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="AppTheme.TextErrorAppearance" parent="TextAppearance.Design.Error">
        <!-- Error chatMessage appearance here -->
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">12dp</item>
    </style>


</resources>
